        <servlet-name>tramitarDatosViaje2_controlador</servlet-name>
        <url-pattern>/tramitarDatosViaje2_controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>guardarDatosDelViaje</servlet-name>
        <url-pattern>/guardarDatosDelViaje</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
